.contacts
  background backgroundColor-hero 
  position relative

  &__title-wrap
    margin-bottom 115px
    display flex
    justify-content space-between
    align-items center
  
  &__map
    width 100%
    height 450px
    border none
  
  &__contacts-box
    position absolute
    top 80px

.contacts-box
  background whiteColor
  box-shadow 0px 4px 40px rgba(0, 0, 0, 0.05)
  border-radius 10px
  display flex
  justify-content space-between
  width 100%
  height 192px
  padding-right 46px
  padding-left 46px
  padding-top 58px

  &__cell
    font-family GothamPro
    font-size 18px
    line-height 24px
    color #4D4D4D