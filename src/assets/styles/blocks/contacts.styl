.contacts
  background backgroundColor-hero 
  position relative

  &__title-wrap
    margin-bottom 115px
    display flex
    justify-content space-between
    align-items center
  
  &__map
    width 100%
    height 450px
    border none
  
  &__contacts-box
    position absolute
    top 80px

.contacts-box
  background whiteColor
  box-shadow 0px 4px 40px rgba(0, 0, 0, 0.05)
  border-radius 10px
  display flex
  justify-content space-between
  width 100%
  min-height 192px
  padding-right 46px
  padding-left 46px
  padding-top 58px

  &__cell
    font-family GothamPro
    font-size 18px
    line-height 24px
    color #4D4D4D

+below(sm-breakpoint)
  .contacts
    &__title-wrap
      flex-wrap wrap
      margin-bottom 30px
    
    &__contacts-box
      position relative
      top 0
      margin-bottom 30px
      padding-bottom 58px
  .contacts-box
    flex-wrap wrap
    justify-content center
    &__cell
      flex-basis 100%
      &:not(:last-child)
        margin-bottom 10px
+below(xs-breakpoint)    
  .contacts
    &__title-wrap
      justify-content center
    &__title
      flex-basis 100%
      margin-bottom 20px