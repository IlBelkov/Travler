.list-about
  .container
    padding-top 162px
    display flex
    justify-content space-between
    flex-wrap wrap
    padding-bottom 371px

  &__block:nth-child(-n+3)
    margin-bottom 91px
  
  &__title
    font-family GothamPro
    font-size 24px
    line-height 34px
    color hoverLinkColor
    font-weight 500
    margin-bottom 32px

  &__text
    max-width 329px
    font-family GothamPro
    font-size 14px
    line-height 25px
    color captionColor

+below(lg-breakpoint)
  .list-about
    .container
      justify-content center 
      padding-bottom 150px
    
    &__block:nth-child(odd)
      margin-right 10px

+below(sm-breakpoint)
  .list-about
    
    &__block:not(:last-child)
      margin-bottom 91px
