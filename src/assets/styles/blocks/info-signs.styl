.info-signs
  display flex
  flex-wrap wrap
  justify-content space-between
  width 524px

  &__flex-item:nth-child(-n+3)
    margin-bottom 60px

  &__sign
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    
    &-wrap
      position relative
      width 142px
      height 142px
      border 10px solid #FFFFFF
      box-sizing border-box
      box-shadow 0px 5px 50px rgba(0, 0, 0, 0.05)
      border-radius 50%
      margin-bottom 23px
      background hoverLinkColor
    
  &__caption
    font-family GothamPro
    font-size 16px
    line-height 21px
    text-align center
    font-weight 700
    color captionColor
  
  