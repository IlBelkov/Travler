.info-signs
  display flex
  flex-wrap wrap
  justify-content space-between
  max-width 524px

  &__flex-tem
    
    &:nth-child(-n+3)
      margin-bottom 60px

  &__caption
    font-family GothamPro
    font-size 16px
    line-height 21px
    text-align center
    font-weight 700
    color captionColor
  
 .sign
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

    &-wrap
      position relative
      width 142px
      height 142px
      box-sizing border-box
      box-shadow 0px 5px 50px rgba(0, 0, 0, 0.05)
      border-radius 50%
    
      &--red    
        background whiteColor
        border 10px solid redColor    
      &--blue
        background hoverLinkColor
        border 10px solid whiteColor
        margin-bottom 23px
      