.footer
  background footer
  .container
    display flex
    justify-content space-between
    align-items center
    height 72px

  &__social-wrap
    display flex

  &__icon-item
    background whiteColor
    width 24px
    height 24px
    border-radius 50%
    position relative
  
    &:not(:last-child)
      margin-right 12px

  &__icon
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

    &:hover
      transform translate(-50%,-50%) scale(1.5)
      cursor pointer
      fill hoverLinkColor
      stroke hoverLinkColor

.footer-menu
  &__link
    font-family GothamPro
    font-size 16px
    line-height 23px
    color whiteColor 

    &:hover
      color hoverLinkColor
   
    &:not(:last-child)
      margin-right 51px

.vk
  stroke footer
  width 13px
  height 8px
.inst
  stroke footer
  width 11px
  height 11px

+below(sm-breakpoint)
  .footer-menu
    &__link
      font-size 12px
      line-height 0px

      &:not(:last-child)
        margin-right 21px

+below(xs-breakpoint)
  .footer-menu
    &__link
      &:not(:last-child)
        margin-right 11px