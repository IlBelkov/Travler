.recommendations
  padding-top 281px
  background backgroundColor-hero

  &__block-wrapper
    display flex
    justify-content space-between
    align-items center
  
  &__flex-item
    margin-top 91px
    display flex
    justify-content center
    flex-wrap wrap
    max-width 330px
    min-height 347px
    background whiteColor
    border-radius 5px
    position relative
    padding-top 105px
    padding-left 23px
    padding-right 23px
    margin-top 164px
  
  &__caption
    font-family GothamPro
    font-size 16px
    line-height 26px
    color captionColor

  &__sign
    position absolute
    left 50%
    transform translateX(-50%)
    top -71px

.cards
  margin-top 137px

  &__item
    width 640px
    height 280px
    box-shadow 0px 30px 20px rgba(34, 47, 62, 0.05)
    border-radius 6px
    display flex
    justify-content space-between
    align-items center

   
    &:nth-child(1)
      background hoverLinkColor
    &:nth-child(2)
      background #F79F1F
    &:nth-child(3)
      background #A3CB38


  &__image:nth-of-type(3)
    align-self start

  
