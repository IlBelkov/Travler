.button
  &:hover
    box-shadow inset 0px -3px 10px rgba(0, 0, 0, 0.5)
    transition .6s
    cursor pointer

  &--btn
    width 202px
    height 49px
    border-radius 32px
    border none
    font-family GothamPro
    font-size 14px
    line-height 23px
      
    &:active, 
    &:focus 
      outline none
      
  &--shadow
    box-shadow inset 0px -3px 0px rgba(0, 0, 0, 0.25)

 .sign
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

    &-wrap
      position relative
      width 142px
      height 142px
      box-sizing border-box
      box-shadow 0px 5px 50px rgba(0, 0, 0, 0.05)
      border-radius 50%
    
      &--red    
        background whiteColor
        border 10px solid redColor    
      &--blue
        background hoverLinkColor
        border 10px solid whiteColor
        margin-bottom 23px
      

    
      